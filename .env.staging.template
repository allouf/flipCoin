# Staging Environment Configuration for Solana Coin Flipper
# This configuration is for staging/testing with REAL Switchboard VRF accounts on devnet
# Copy to .env.staging and replace placeholder values

# Solana RPC Endpoints (Staging - Devnet with Production RPC)
REACT_APP_DEVNET_RPC_URL=https://devnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY
REACT_APP_TESTNET_RPC_URL=https://api.testnet.solana.com
REACT_APP_MAINNET_RPC_URL=https://api.mainnet-beta.solana.com

# App Configuration (Staging)
REACT_APP_NETWORK=devnet
REACT_APP_HOUSE_FEE_PERCENTAGE=3

# Smart Contract Configuration (Staging - Devnet)
REACT_APP_PROGRAM_ID=GGowNXivyzWKePKstFpyU18ykoaM9ygKuuzAV1mYoczn
REACT_APP_HOUSE_FEE_BPS=300
REACT_APP_MIN_BET_SOL=0.01

# Staging VRF Account Configuration (REAL Switchboard VRF Accounts on Devnet)
# These should be ACTUAL Switchboard VRF accounts created specifically for staging testing
# Use VRF_PRODUCTION_SETUP_GUIDE.md to create these on devnet

# Primary VRF Account (Staging - Real Switchboard Account)
REACT_APP_VRF_ACCOUNT_1_PUBKEY=REPLACE_WITH_REAL_DEVNET_SWITCHBOARD_VRF_1
REACT_APP_VRF_ACCOUNT_1_NAME=staging-switchboard-primary
REACT_APP_VRF_ACCOUNT_1_PRIORITY=1

# Secondary VRF Account (Staging - Real Switchboard Account)
REACT_APP_VRF_ACCOUNT_2_PUBKEY=REPLACE_WITH_REAL_DEVNET_SWITCHBOARD_VRF_2
REACT_APP_VRF_ACCOUNT_2_NAME=staging-switchboard-secondary
REACT_APP_VRF_ACCOUNT_2_PRIORITY=2

# Tertiary VRF Account (Staging - Real Switchboard Account)
REACT_APP_VRF_ACCOUNT_3_PUBKEY=REPLACE_WITH_REAL_DEVNET_SWITCHBOARD_VRF_3
REACT_APP_VRF_ACCOUNT_3_NAME=staging-switchboard-tertiary
REACT_APP_VRF_ACCOUNT_3_PRIORITY=3

# Staging VRF Health Thresholds (Production-like but slightly relaxed)
REACT_APP_VRF_MAX_QUEUE_DEPTH=12
REACT_APP_VRF_MAX_RESPONSE_TIME=9000
REACT_APP_VRF_MIN_SUCCESS_RATE=0.92

# Staging VRF Monitoring Configuration
REACT_APP_VRF_HEALTH_CHECK_INTERVAL=30000

# Staging Monitoring & Analytics (Optional)
REACT_APP_SENTRY_DSN=YOUR_STAGING_SENTRY_DSN
REACT_APP_ANALYTICS_KEY=YOUR_STAGING_ANALYTICS_KEY

# Staging Configuration
REACT_APP_ENABLE_DEVTOOLS=true
REACT_APP_LOG_LEVEL=debug
REACT_APP_ENABLE_VRF_DEBUG=true

# Build Configuration (Staging)
GENERATE_SOURCEMAP=true