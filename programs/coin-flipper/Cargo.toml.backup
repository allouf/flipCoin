[package]
name = "coin-flipper"
version = "0.1.0"
description = "Solana Coin Flipper - Decentralized P2P betting game"
edition = "2021"

[lib]
crate-type = ["cdylib", "lib"]
name = "coin_flipper"

[features]
no-entrypoint = []
no-idl = []
no-log-ix-name = []
cpi = ["no-entrypoint"]
default = ["vrf-enabled"]
vrf-enabled = ["switchboard-v2"]
idl-build = ["anchor-lang/idl-build", "anchor-spl/idl-build"]

[dependencies]
anchor-lang = { version = "0.29.0", features = ["init-if-needed"] }
anchor-spl = "0.29.0"
switchboard-v2 = { version = "0.4.0", optional = true }

[dev-dependencies]

# Use latest compatible versions with Anchor 0.31.1