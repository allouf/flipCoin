# REACT_APP_DEVNET_RPC_URL=https://solana-devnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# REACT_APP_MAINNET_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# REACT_APP_DEVNET_RPC_URL=https://rpc.ankr.com/solana_devnet
# REACT_APP_MAINNET_RPC_URL=https://rpc.ankr.com/solana

# App Configuration (Production)
REACT_APP_NETWORK=mainnet-beta
REACT_APP_HOUSE_FEE_PERCENTAGE=3

# Smart Contract Configuration (Production)
# ‚ö†Ô∏è Update with your actual deployed program ID for mainnet
REACT_APP_PROGRAM_ID=YOUR_MAINNET_PROGRAM_ID_HERE
REACT_APP_HOUSE_FEE_BPS=300
REACT_APP_MIN_BET_SOL=0.01

# Production VRF Account Configuration (Switchboard)
# üî¥ CRITICAL: Replace with REAL Switchboard VRF account public keys
# Follow VRF_PRODUCTION_SETUP_GUIDE.md to obtain these accounts

# Primary VRF Account (Highest Priority)
REACT_APP_VRF_ACCOUNT_1_PUBKEY=REPLACE_WITH_ACTUAL_SWITCHBOARD_VRF_PUBKEY_1
REACT_APP_VRF_ACCOUNT_1_NAME=switchboard-primary
REACT_APP_VRF_ACCOUNT_1_PRIORITY=1

# Secondary VRF Account (Backup)
REACT_APP_VRF_ACCOUNT_2_PUBKEY=REPLACE_WITH_ACTUAL_SWITCHBOARD_VRF_PUBKEY_2
REACT_APP_VRF_ACCOUNT_2_NAME=switchboard-secondary
REACT_APP_VRF_ACCOUNT_2_PRIORITY=2

# Tertiary VRF Account (Emergency Backup)
REACT_APP_VRF_ACCOUNT_3_PUBKEY=REPLACE_WITH_ACTUAL_SWITCHBOARD_VRF_PUBKEY_3
REACT_APP_VRF_ACCOUNT_3_NAME=switchboard-tertiary
REACT_APP_VRF_ACCOUNT_3_PRIORITY=3

# Optional: Fourth VRF Account (High Availability)
REACT_APP_VRF_ACCOUNT_4_PUBKEY=REPLACE_WITH_ACTUAL_SWITCHBOARD_VRF_PUBKEY_4
REACT_APP_VRF_ACCOUNT_4_NAME=switchboard-emergency
REACT_APP_VRF_ACCOUNT_4_PRIORITY=4

# Production VRF Health Thresholds (Strict for Production)
REACT_APP_VRF_MAX_QUEUE_DEPTH=10
REACT_APP_VRF_MAX_RESPONSE_TIME=8000
REACT_APP_VRF_MIN_SUCCESS_RATE=0.95

# Production VRF Monitoring Configuration
REACT_APP_VRF_HEALTH_CHECK_INTERVAL=30000

# Production Monitoring & Analytics
# Replace with your actual service keys
REACT_APP_SENTRY_DSN=YOUR_SENTRY_DSN_FOR_ERROR_TRACKING
REACT_APP_ANALYTICS_KEY=YOUR_ANALYTICS_SERVICE_KEY
REACT_APP_MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN

# Production Security Configuration
REACT_APP_ENABLE_DEVTOOLS=false
REACT_APP_LOG_LEVEL=error
REACT_APP_ENABLE_VRF_DEBUG=false

# Production House Wallet Monitoring
# These are read-only for monitoring purposes - private keys should NEVER be in env files
REACT_APP_HOUSE_WALLET_PUBKEY=YOUR_PRODUCTION_HOUSE_WALLET_PUBKEY
REACT_APP_EXPECTED_HOUSE_FEE_COLLECTION_RATE=0.03

# Switchboard Network Configuration (Production)
# Verify these are current Switchboard addresses for your target network
REACT_APP_SWITCHBOARD_PROGRAM_ID=SW1TCH7qEPTdLsDHRgPuMQjbQxKdH2aBStViMFnt64f
REACT_APP_SWITCHBOARD_QUEUE_PUBKEY=YOUR_PRODUCTION_SWITCHBOARD_QUEUE_PUBKEY

# Production Rate Limiting
REACT_APP_MAX_REQUESTS_PER_MINUTE=60
REACT_APP_MAX_GAMES_PER_USER_HOUR=10

# Build Configuration (Production)
GENERATE_SOURCEMAP=false
REACT_APP_VERSION=$npm_package_version