            "type": "publicKey"
          },
          {
            "name": "player1",
            "docs": [
              "First player (same as creator)"
            ],
            "type": "publicKey"
          },
          {
            "name": "player2",
            "docs": [
              "Second player (joins the room)"
            ],
            "type": "publicKey"
          },
          {
            "name": "betAmount",
            "docs": [
              "Bet amount in lamports"
            ],
            "type": "u64"
          },
          {
            "name": "status",
            "docs": [
              "Current room status"
            ],
            "type": {
              "defined": "RoomStatus"
            }
          },
          {
            "name": "player1Selection",
            "docs": [
              "Player 1's coin selection"
            ],
            "type": {
              "option": {
                "defined": "CoinSide"
              }
            }
          },
          {
            "name": "player2Selection",
            "docs": [
              "Player 2's coin selection"
            ],
            "type": {
              "option": {
                "defined": "CoinSide"
              }
            }
          },
          {
            "name": "createdAt",
            "docs": [
              "Room creation timestamp"
            ],
            "type": "i64"
          },
          {
            "name": "selectionDeadline",
            "type": "i64"
          },
          {
            "name": "vrfResult",
            "docs": [
              "VRF/randomness result for transparency"
            ],
            "type": {
              "option": {
                "array": [
                  "u8",
                  32
                ]
              }
            }
          },
          {
            "name": "vrfStatus",
            "type": {
              "defined": "VrfStatus"
            }
          },
          {
            "name": "winner",
            "docs": [
              "Game winner (if completed)"
