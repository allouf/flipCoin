            "type": {
              "option": "publicKey"
            }
          },
          {
            "name": "totalPot",
            "docs": [
              "Total pot size (both players' bets)"
            ],
            "type": "u64"
          },
          {
            "name": "bump",
            "docs": [
              "PDA bump seed for game room"
            ],
            "type": "u8"
          },
          {
            "name": "escrowBump",
            "docs": [
              "PDA bump seed for escrow account"
            ],
            "type": "u8"
          }
