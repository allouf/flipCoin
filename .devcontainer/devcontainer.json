{
  "name": "Solana Coin Flipper Development",
  "image": "mcr.microsoft.com/devcontainers/rust:1-1-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "serayuzgur.crates",
        "tamasfe.even-better-toml",
        "ms-vscode.vscode-json",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next"
      ],
      "settings": {
        "rust-analyzer.checkOnSave.command": "cargo check --workspace --message-format=json --manifest-path Cargo.toml",
        "rust-analyzer.cargo.features": "all",
        "files.watcherExclude": {
          "**/target/**": true
        },
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "rust-lang.rust-analyzer"
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "forwardPorts": [3000, 8899],
  "portsAttributes": {
    "3000": {
      "label": "React Dev Server"
    },
    "8899": {
      "label": "Solana Local Validator"
    }
  },
  "remoteUser": "vscode"
}
